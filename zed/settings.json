// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_size": 12,
  "buffer_font_size": 14,
  "buffer_font_family": "Terminess Nerd Font",
  "buffer_font_weight": 200,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "cursor_blink": false,
  "chat_panel": {
    "button": false
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2",
    "button": false
  },
  "features": {
    "copilot": false
  },
  "collaboration_panel": {
    "button": false
  },

  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark",
    "dark": "Gruvbox Dark"
  }
}
